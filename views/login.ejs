<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./layout/head') %>

    <style>
      body {
        display: flex;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
        text-align: center;
        height: calc(100vh - 200px);
      }

      .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: auto;
      }
    </style>
  </head>

  <body>
    <main class="form-signin">
      <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert">
          <%= messages.error %>
        </div>
      <% } %>

      <form method="POST" action="/login">
        <h1 class="h3 mb-3 fw-normal">Please Login</h1>

        <div class="form-floating">
          <input
            type="text"
            name="username"
            class="form-control"
            placeholder="Input Username"
          />
          <label>Username</label>
        </div>
        <div class="form-floating">
          <input
            type="password"
            name="password"
            class="form-control"
            placeholder="Input Password Password"
          />
          <label>Password</label>
        </div>

        <button class="w-100 btn btn-lg" style="background-color: orange;" type="submit">
          Login
        </button>
      </form>
    </main>

    <%- include('./layout/script'); %>
  </body>
</html>
