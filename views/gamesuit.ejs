<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Suit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="game-suit/game-suit-style.css">
    <link rel="icon" href="game-suit/image/logo 1.png">
</head>
<body>
    <!-- Back Navigation & Title Game --> 
    <header >
        <div class="back">
            <a href="/" target="_parent"><</a>
        </div>
        <div class="brand px-5">
            <img src="game-suit/image/logo 1.png" alt="Logo">
            <h1 class="game-title px-3">ROCK PAPER SCISSOR</h1>
        </div>
    </header>

    <!-- Gameplay -->
    <section>
        <div class="container game-area">
            <div class="row">
                <div class="col-sm-4 player">
                    <div class="row">
                        <div class="col-12"><h2 class="player-text">PLAYER 1</h2></div>
                        <div class="col-12"><img class="img-hand" id="p-batu" src="game-suit/image/batu.png" alt="Batu"></div>
                        <div class="col-12"><img class="img-hand"  id="p-kertas" src="game-suit/image/kertas.png" alt="Kertas"></div>
                        <div class="col-12"><img class="img-hand" id="p-gunting" src="game-suit/image/gunting.png" alt="Gunting"></div>
                    </div>
                </div>

                <div class="col-sm-4 d-flex align-items-center justify-content-center" id="game-result">
                    <div class="vs-box"><h1 class="vs-text" id="h1">VS</h1></div>
                </div>

                <div class="col-sm-4 com">
                    <div class="row">
                        <div class="col-12"><h2 class="com-text">COMPUTER</h2></div>
                        <div class="col-12"><img class="img-hand" id="c-batu" src="game-suit/image/batu.png" alt="Batu"></div>
                        <div class="col-12"><img class="img-hand" id="c-kertas" src="game-suit/image/kertas.png" alt="Kertas"></div>
                        <div class="col-12"><img class="img-hand" id="c-gunting" src="game-suit/image/gunting.png" alt="Gunting"></div>
                    </div>
                </div>

                    <div class="row">
                        <div class="col-lg-12"><div class="text-center"><img id="refresh" src="game-suit/image/refresh.png" alt="Refresh"></div>
                    </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="game-suit/game-suit-control.js"></script>


</body>
</html>